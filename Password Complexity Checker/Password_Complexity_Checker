import re

def check_password_strength(password):
    strength_points = 0
    feedback = []

    # Criteria
    length_criteria = len(password) >= 8
    uppercase_criteria = re.search(r"[A-Z]", password)
    lowercase_criteria = re.search(r"[a-z]", password)
    number_criteria = re.search(r"[0-9]", password)
    special_criteria = re.search(r"[!@#$%^&*(),.?\":{}|<>]", password)

    # Points awarding
    if length_criteria:
        strength_points += 1
    else:
        feedback.append("Use at least 8 characters.")

    if uppercase_criteria:
        strength_points += 1
    else:
        feedback.append("Add at least one uppercase letter.")

    if lowercase_criteria:
        strength_points += 1
    else:
        feedback.append("Add at least one lowercase letter.")

    if number_criteria:
        strength_points += 1
    else:
        feedback.append("Include at least one number.")

    if special_criteria:
        strength_points += 1
    else:
        feedback.append("Include at least one special character (!@#$ etc.).")

    # Strength category
    categories = {
        5: "Excellent",
        4: "Strong",
        3: "Medium",
        2: "Weak",
        1: "Very Weak",
        0: "Extremely Weak"
    }

    strength = categories[strength_points]

    return strength, feedback


# Main program
password = input("Enter your password: ")
strength, tips = check_password_strength(password)

print(f"\nPassword Strength: {strength}")
print("Feedback:")
if not tips:
    print("âœ” Your password is strong!")
else:
    for point in tips:
        print(f"- {point}")
